    <div class="form-floating">
        <input type="text" class="form-control" required asp-for="UserName"/>
        <label for="floatingInput">UserName</label>


    </div>

    <div class="form-floating">
        <input type="password" class="form-control" required asp-for="clave" />
        <label for="floatingPasswordt">Passwordt</label>


    </div>

    <div class="checkbox mb-3">
        <label >
            <input type="checkbox"   asp-for="MantenerActivo" /> Recordar sesion
        </label>

    </div>

    <button type="submit" class="btn-lg btn-primary">Ingresar</button>

    <label class="alert-danger">@ViewBag.Error</label>


</form>
